<Window x:Class="Exam2Review.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam2Review"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstSalary" Margin="296,183,220,0" SelectionChanged="lstSalary_SelectionChanged" Height="251" VerticalAlignment="Top"/>
        <ListBox x:Name="lstEmail" Margin="4,183,522,0" SelectionChanged="lstEmail_SelectionChanged"/>
        <TextBox x:Name="avgSalary" HorizontalAlignment="Left" Margin="10,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="33" TextChanged="avgSalary_TextChanged"/>
        <Label Content="Emails @dropbox.com" HorizontalAlignment="Left" Margin="10,162,0,0" VerticalAlignment="Top" Width="175" FontFamily="Arial Black"/>
        <Label Content="Salary's &gt; 70,000" HorizontalAlignment="Left" Margin="296,160,0,0" VerticalAlignment="Top" FontFamily="Arial Black"/>
        <Label Content="Average Salary " HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" FontFamily="Arial Black"/>

    </Grid>
</Window>
